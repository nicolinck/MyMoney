{% extends "NLKMyMoneyBundle::layout.html.twig" %}


{% block titre %}
  <h2>Ammortissements</h2>
{% endblock %}

{% block nlkmymoney_body %}
  	<h3>Rentrées</h3>
	<div class="table">          
	    <table class="table table-condensed">
	      <thead>
	        <tr>
			<th>Début</th>
			<th>Fin</th>
	        <th>Libellé</th>
	        <th>Catégorie</th>
			<th>Montant</th>
			<th></th>
			<th></th>
	      	</tr>
	    	</thead>
	    	<tbody>
				{% for rentreeAmmortie in listeRentreesAmmorties %}
	      		<tr>
					<td>{{ rentreeAmmortie.exerciceDebut.annee }} - {{ rentreeAmmortie.exerciceDebut.mois }}</td>
					<td>{{ rentreeAmmortie.exerciceFin.annee }} - {{ rentreeAmmortie.exerciceFin.mois }}</td>
					<td>{{ rentreeAmmortie.name }}</td>
	        		<td>{{ rentreeAmmortie.categorie.name }}</td>
	        		<td class="text-right">{{ rentreeAmmortie.montant }} €</td>
	        		<td class="text-right"><a class="btn btn-primary btn-xs" href="{{ path('nlk_my_money_rentree_ammortie_edit', { 'id': rentreeAmmortie.id }) }}">
           <i class="icon-edit icon-white"></i><div class="glyphicon glyphicon-pencil"></div>
        </a><a class="btn btn-danger btn-xs" href="{{ path('nlk_my_money_rentree_delete', { 'id': rentreeAmmortie.id }) }}">
           <i class="icon-edit icon-white"></i><div class="glyphicon glyphicon-trash"></div>
        </a></td>
	      		</tr>
	      		{% endfor %}
	    	</tbody>
	  	</table>
  	</div>

  	<h3>Dépenses</h3>
	<div class="table">          
	    <table class="table table-condensed">
	      <thead>
	        <tr>
			<th>Début</th>
			<th>Fin</th>
	        <th>Libellé</th>
	        <th>Catégorie</th>
			<th>Montant</th>
			<th></th>
			<th></th>
	      	</tr>
	    	</thead>
	    	<tbody>
				{% for depenseAmmortie in listeDepensesAmmorties %}
	      		<tr>
					<td>{{ depenseAmmortie.exerciceDebut.annee }} - {{ depenseAmmortie.exerciceDebut.mois }}</td>
					<td>{{ depenseAmmortie.exerciceFin.annee }} - {{ depenseAmmortie.exerciceFin.mois }}</td>
					<td>{{ depenseAmmortie.name }}</td>
	        		<td>{{ depenseAmmortie.categorie.name }}</td>
	        		<td class="text-right">{{ depenseAmmortie.montant }} €</td>
	        		<td class="text-right"><a class="btn btn-primary btn-xs" href="{{ path('nlk_my_money_depense_ammortie_edit', { 'id': depenseAmmortie.id }) }}">
           <i class="icon-edit icon-white"></i><div class="glyphicon glyphicon-pencil"></div>
        </a><a class="btn btn-danger btn-xs" href="{{ path('nlk_my_money_depense_delete', { 'id': depenseAmmortie.id }) }}">
           <i class="icon-edit icon-white"></i><div class="glyphicon glyphicon-trash"></div>
        </a></td>
	      		</tr>
	      		{% endfor %}
	    	</tbody>
	  	</table>
  	</div>

  
{% endblock %}
